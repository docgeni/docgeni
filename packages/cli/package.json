{
  "name": "@docgeni/cli",
  "version": "2.1.0-next.3",
  "description": "CLI tool for Docgeni",
  "author": "why520crazy <why520crazy@163.com>",
  "homepage": "https://github.com/docgeni/docgeni#readme",
  "license": "MIT",
  "main": "index.js",
  "bin": {
    "docgeni": "bin/docgeni"
  },
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/docgeni/docgeni.git"
  },
  "scripts": {
    "clean": "rimraf ./lib && rimraf ./tsconfig.tsbuildinfo",
    "build-only": "tsc -b",
    "build": "yarn clean && yarn build-only && yarn copy:schematics",
    "copy:schematics": "cpx \"./src/schematics/**/{.*,*}.{json,template}\" ./lib/schematics/ -v",
    "test": "echo \"Error: run tests from root\" && exit 1"
  },
  "bugs": {
    "url": "https://github.com/docgeni/docgeni/issues"
  },
  "dependencies": {
    "@angular-devkit/schematics": "^15.2.0",
    "@angular-devkit/schematics-cli": "^15.2.0",
    "@docgeni/core": "^2.1.0-next.3",
    "@docgeni/template": "^2.1.0-next.3",
    "@docgeni/toolkit": "^2.1.0-next.3",
    "@schematics/angular": "15.2.0",
    "chokidar": "^3.3.1",
    "cosmiconfig": "^6.0.0",
    "fancy-log": "^1.3.3",
    "front-matter": "^3.1.0",
    "fs-extra": "^9.0.0",
    "glob": "^7.1.6",
    "stringify-object": "^3.3.0",
    "tapable": "^1.1.3",
    "yargs": "15.3.1",
    "zone.js": "^0.10.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^8.1.0",
    "@types/stringify-object": "^3.3.0",
    "@types/tapable": "^1.0.5",
    "cpx": "^1.5.0",
    "rimraf": "^3.0.2",
    "typescript": "4.3.5"
  },
  "keywords": [
    "angular",
    "docgeni",
    "docgen",
    "documentation",
    "docs",
    "markdown",
    "components",
    "library",
    "docs generator",
    "docs generate",
    "docs generator",
    "documentation generator",
    "static site generator"
  ],
  "schematics": "./lib/schematics/collection.json",
  "ng-add": {
    "save": "devDependencies"
  }
}
