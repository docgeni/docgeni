{
  "$schema": "http://json-schema.org/schema",
  "id": "ng-add",
  "title": "ng-add",
  "type": "object",
  "properties": {
    "project": {
      "description": "Name of the project.",
      "type": "string",
      "$default": {
        "$source": "projectName"
      }
    },
    "mode": {
      "type": "string",
      "default": "lite",
      "description": "Mode of documentation, full mode contains nav, home page, lite mode only contains menu and doc viewers",
      "x-prompt": {
        "message": "Mode of documentation, full mode contains nav, home page, lite mode only contains menu and doc viewers",
        "type": "list",
        "items": [
          {
            "value": "full",
            "label": "Full [ Detail: https://docgeni.org/configuration/global#mode ]"
          },
          {
            "value": "lite",
            "label": "Lite [ Detail: https://docgeni.org/configuration/global#mode ]"
          }
        ]
      }
    },
    "docsPath": {
      "type": "string",
      "default": "docs",
      "description": "Docs folder",
      "x-prompt": {
        "message": "Docs folder"
      }
    }
  }
}
