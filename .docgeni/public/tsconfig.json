{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc/site",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve",
    "lib": [
      "es2018",
      "dom"
    ],
    "types": [
      "node"
    ],
    "paths": {
      "@docgeni/template": [
        "../../packages/template/src/public-api.ts"
      ],
      "@docgeni/template/*": [
        "../../packages/template/src/*"
      ],
      "@docgeni/alib": [
        "../../packages/a-lib/public-api.ts"
      ],
      "@docgeni/alib/*": [
        "../../packages/a-lib/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "files": [
    "src/main.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ],
  "exclude": [
    "src/assets",
    "test.ts"
  ]
}
